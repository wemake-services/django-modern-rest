# See https://github.com/seddonym/import-linter

[importlinter]
root_package = django_modern_rest
include_external_packages = True
exclude_type_checking_imports = True


[importlinter:contract:layers]
name = Layered architecture of our project
type = layers

containers =
  django_modern_rest

layers =
  routing
  controller
  options_mixins
  endpoint
  validation
  components | security
  negotiation
  response
  plugins
  serializer
  # DTOs:
  headers | cookies
  types
  internal
  settings
  exceptions
  envs

ignore_imports =
  # Mixin validation:
  django_modern_rest.validation.* -> django_modern_rest.options_mixins
  # Settings can clear cache:
  django_modern_rest.settings -> django_modern_rest.internal.cache
  # Internal cache can import anything:
  django_modern_rest.internal.cache -> django_modern_rest.plugins.msgspec.json
  django_modern_rest.internal.cache -> django_modern_rest.plugins.pydantic.serializer


[importlinter:contract:no-optional-deps]
name = Do not use these optional dependencies outside of plugins
type = forbidden

source_modules =
  django_modern_rest

forbidden_modules =
  # optinal deps:
  pydantic
  msgspec
  jwt
  # internal modules:
  django_modern_rest_pytest
  django_test_app

ignore_imports =
  # Pydantic plugin:
  django_modern_rest.plugins.pydantic -> pydantic
  django_modern_rest.plugins.pydantic.* -> pydantic
  # Msgspec plugin:
  django_modern_rest.plugins.msgspec -> msgspec
  django_modern_rest.plugins.msgspec.* -> msgspec
  # jwt auth:
  django_modern_rest.security.jwt -> jwt
  django_modern_rest.security.jwt.* -> jwt
  # Optional json support from msgspec:
  django_modern_rest.settings -> msgspec
  django_modern_rest.internal.json -> msgspec

[importlinter:contract:plugins-independence]
name = All plugins must be independent
type = independence

modules =
  django_modern_rest.plugins.*
