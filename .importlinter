# See https://github.com/seddonym/import-linter

[importlinter]
root_package = django_modern_rest
include_external_packages = True
exclude_type_checking_imports = True


[importlinter:contract:layers]
name = Layered architecture of our project
type = layers

containers =
  django_modern_rest

layers =
  routing
  controller
  options_mixins
  endpoint
  validation
  components
  negotiation
  response
  plugins
  serializer
  openapi
  headers | cookies
  types
  internal
  settings
  exceptions
  envs

ignore_imports =
  # Mixin validation:
  django_modern_rest.validation.* -> django_modern_rest.options_mixins
  # Settings can clear cache:
  django_modern_rest.settings -> django_modern_rest.internal.cache
  # Settings can initialize default OpenAPI config:
  django_modern_rest.settings -> django_modern_rest.openapi.config
  # Openapi can use our optimizing `path`:
  django_modern_rest.openapi.spec -> django_modern_rest.routing

[importlinter:contract:no-optional-deps]
name = Do not use these optional dependencies outside of plugins
type = forbidden

source_modules =
  django_modern_rest

forbidden_modules =
  # optinal deps:
  pydantic
  msgspec
  jwt
  # internal modules:
  django_modern_rest_pytest
  django_test_app

ignore_imports =
  # Pydantic plugin:
  django_modern_rest.plugins.pydantic -> pydantic
  django_modern_rest.plugins.pydantic.* -> pydantic
  # Msgspec plugin:
  django_modern_rest.plugins.msgspec -> msgspec
  django_modern_rest.plugins.msgspec.* -> msgspec
  # jwt auth:
  django_modern_rest.security.jwt -> jwt
  django_modern_rest.security.jwt.* -> jwt
  # Optional json support from msgspec:
  django_modern_rest.settings -> msgspec
  django_modern_rest.internal.json -> msgspec

[importlinter:contract:plugins-independence]
name = All `plugins` must be independent
type = independence

modules =
  django_modern_rest.plugins.*


[importlinter:openapi:layers]
name = Layered architecture of OpenAPI schema generation
type = layers

containers =
  django_modern_rest.openapi

layers =
  spec
  views | core
  renderers
  converter | generators
  extractors | collector | config
  types
  objects

[importlinter:openapi:generators-independence]
name = All OpenAPI `generators` must be independent
type = independence

modules =
  django_modern_rest.openapi.generators.*

[importlinter:openapi:renderers-independence]
name = All OpenAPI `renderers` must be independent
type = independence

modules =
  django_modern_rest.openapi.objects.*

[importlinter:openapi:objects-independence]
name = All OpenAPI `objects` must be independent
type = independence

modules =
  django_modern_rest.openapi.renderers.*

ignore_imports =
  # Allow import base render class:
  django_modern_rest.openapi.renderers.* -> django_modern_rest.openapi.renderers.base
